{
  "name": "cire-store-backend",
  "version": "1.0.0",
  "description": "Express backend with mongoose and cloudinary using clean architecture",
  "main": "dist/index.js",
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "exec": "node -r tsconfig-paths/register -r ts-node/register src/index.ts",
    "ext": "ts, js"
  },
  "nyc": {
    "exclude": [
      "src/utils/environment.ts"
    ]
  },
  "scripts": {
    "dev": "nodemon .",
    "start": "node .",
    "test": "nyc mocha -r tsconfig-paths/register -r ts-node/register src/**/*.spec.ts",
    "build": "tsc --project tsconfig.build.json && resolve-tspaths",
    "bs": "tsc && resolve-tspaths && node .",
    "seed": "tsc && resolve-tspaths && node dist/drivers/db/__seed.js",
    "gen": "node -r tsconfig-paths/register -r ts-node/register src/utils/__generator.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EricEchemane/Cire-Store-backend.git"
  },
  "keywords": [
    "mongoose",
    "express",
    "cloudinary"
  ],
  "author": "Eric Echemane",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.30.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-session": "^1.17.3",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.5.1",
    "socket.io": "^4.5.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-typescript": "^7.18.6",
    "@faker-js/faker": "^7.3.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/chai": "^4.3.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.5",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.6.2",
    "chai": "^4.3.6",
    "mocha": "^10.0.0",
    "nodemon": "^2.0.19",
    "nyc": "^15.1.0",
    "resolve-tspaths": "^0.7.4",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.4"
  }
}